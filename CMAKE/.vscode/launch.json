{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${command:cmake.launchTargetPath}",
            "targetArchitecture": "arm",//虽然官方说弃用了，但实际上必须指明
            "MIMode": "gdb",
            "miDebuggerPath": "${command:vscode-embedded.st.gdb}",
            "miDebuggerServerAddress": "localhost:2331",
            //   "debugServerPath": "${command:vscode-embedded.st.gdbserver}",
            //   "debugServerArgs": "--stm32cubeprogrammer-path ${command:vscode-embedded.st.cubeprogrammer} --swd --port-number 3333",
            //   "serverStarted": "Waiting for connection on port .*\\.\\.\\.",
            //   "stopAtConnect": true,
            "postRemoteConnectCommands": [
                {
                    "text": "load build/debug/build/Project.elf"
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "externalConsole": true,
            "preLaunchTask": "Build",
              "svdPath": "${command:vscode-embedded.st.svd}/STM32F103.svd",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}